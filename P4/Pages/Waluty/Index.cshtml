@page
@model P4.Pages.Waluty.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Waluta Bazowa
            </th>
            <th>
                Waluta przeliczana
            </th>
            <th>
                Wartość
            </th>
            <th>
                Data pobrania
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.waluty) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Base)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.wartosc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataPobrania)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
